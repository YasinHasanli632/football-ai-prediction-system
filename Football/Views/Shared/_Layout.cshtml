<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <title>Football AI | Admin</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ADMIN CSS -->
    <link rel="icon" type="image/png" href="~/admin/images/logom.png" />
    <link rel="stylesheet" href="~/admin/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/admin/css/style.css" />

    @RenderSection("Styles", required: false)
</head>

<body class="bg-light">

    <div class="d-flex min-vh-100">

        <!-- SIDEBAR -->
        @await Component.InvokeAsync("Sidebar")

        <!-- MAIN CONTENT -->
        <div class="flex-fill d-flex flex-column">

            <!-- TOP BAR -->
            <header class="bg-white border-bottom px-4 py-3 d-flex justify-content-between align-items-center">
                <div class="fw-bold">
                    ⚽ Football AI Prediction System
                </div>

                <div class="text-muted small">
                    Admin Panel
                </div>
            </header>

            <!-- PAGE CONTENT -->
            <main class="flex-fill container-fluid py-4">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="bg-white border-top text-center small py-2 text-muted">
                © @DateTime.Now.Year Football AI
            </footer>

        </div>

    </div>

    <!-- ADMIN JS -->
    <script src="~/admin/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="~/admin/js/vendor/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
