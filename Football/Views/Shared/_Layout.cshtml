<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <title>Football AI</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>

<body>

    <div class="d-flex min-vh-100">

        <!-- SIDEBAR (ViewComponent → _Sidebar.cshtml) -->
        @await Component.InvokeAsync("Sidebar")

        <!-- MAIN CONTENT -->
        <main class="flex-fill bg-light">

            <header class="bg-white border-bottom px-4 py-3 d-flex justify-content-between">
                <span class="fw-bold">Football Prediction Panel</span>
                <span class="text-muted">AI Match Analysis</span>
            </header>

            <div class="container-fluid py-4">
                @RenderBody()
            </div>

        </main>

    </div>

    <!-- JS -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
