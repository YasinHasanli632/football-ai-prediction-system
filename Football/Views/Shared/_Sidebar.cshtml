@model Football.ViewModels.SidebarVm

<aside class="bg-dark text-white p-3" style="width:260px">

    <!-- LOGO -->
    <div class="text-center mb-4">
        <img src="~/admin/images/logom.png"
             alt="Football AI"
             style="max-width:120px" />
    </div>

    <ul class="nav nav-pills flex-column gap-2">

        <!-- HOME -->
        <li class="nav-item">
            <a class="nav-link text-white"
               asp-controller="Home"
               asp-action="Index">
                <i class="fa fa-home me-2"></i>
                Home
            </a>
        </li>

        <!-- TODAY MATCHES -->
        <li class="nav-item">
            <a class="nav-link text-white d-flex justify-content-between align-items-center"
               asp-controller="Football"
               asp-action="Index">
                <span>
                    <i class="fa fa-calendar me-2"></i>
                    Bugünkü Oyunlar
                </span>

                <span class="badge bg-secondary">
                    @Model.TodayMatchCount
                </span>
            </a>
        </li>

        <!-- LIVE MATCHES -->
        <li class="nav-item">
            <a class="nav-link text-white d-flex justify-content-between align-items-center"
               asp-controller="Football"
               asp-action="Live">
                <span>
                    <i class="fa fa-circle text-danger me-2"></i>
                    Canlı Oyunlar
                </span>

                @if (Model.LiveMatchCount > 0)
                {
                    <span class="badge bg-danger">
                        @Model.LiveMatchCount
                    </span>
                }
            </a>
        </li>

        <!-- LEAGUES -->
        <li class="nav-item mt-3">
            <span class="text-uppercase text-secondary small ps-2">
                Liqalar
            </span>
        </li>

        @foreach (var league in Model.Leagues)
        {
            <li class="nav-item">
                <a class="nav-link text-white d-flex justify-content-between align-items-center"
                   asp-controller="Football"
                   asp-action="League"
                   asp-route-leagueId="@league.LeagueId">

                    <span>
                        <i class="fa fa-trophy me-2"></i>
                        @league.LeagueName
                    </span>

                    @if (league.LiveMatchCount > 0)
                    {
                        <span class="badge bg-danger">
                            @league.LiveMatchCount
                        </span>
                    }
                </a>
            </li>
        }

    </ul>

</aside>
