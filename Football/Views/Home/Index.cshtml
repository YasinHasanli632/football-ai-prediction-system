@model Football.ViewModels.HomeVm

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">

        <div class="card shadow-sm">
            <div class="card-body">

                <h3 class="card-title mb-3">
                    ⚽ Football Prediction System
                </h3>

                <p class="text-muted">
                    Bu sistem real vaxtlı məlumatlar, statistik analiz
                    və AI alqoritmləri əsasında futbol oyunları üçün
                    ən uyğun ehtimalları hesablayır.
                </p>

                <hr />

                <!-- STAT CARDS -->
                <div class="row text-center">

                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h5>📅 Bugünkü Oyunlar</h5>
                            <h3 class="fw-bold">
                                @Model.TodayMatchCount
                            </h3>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h5>🔴 Canlı Oyunlar</h5>
                            <h3 class="fw-bold text-danger">
                                @Model.LiveMatchCount
                            </h3>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h5>🏆 Aktiv Liqalar</h5>
                            <h3 class="fw-bold">
                                @Model.LeagueCount
                            </h3>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="border rounded p-3">
                            <h5>🤖 Proqnozlar</h5>
                            <h3 class="fw-bold">
                                @Model.PredictionCount
                            </h3>
                        </div>
                    </div>

                </div>

                <hr />

                <!-- CTA -->
                <div class="mt-3">
                    <a asp-controller="Football"
                       asp-action="Index"
                       class="btn btn-primary me-2">
                        Bugünkü Oyunlara Bax
                    </a>

                    <a asp-controller="Football"
                       asp-action="Live"
                       class="btn btn-outline-danger">
                        Canlı Oyunlar
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>
