@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">

        <div class="card shadow-sm">
            <div class="card-body">

                <h3 class="card-title mb-3">
                    ⚽ Football Prediction System
                </h3>

                <p class="text-muted">
                    Bu sistem müxtəlif data provider-lərdən (odds, tarixçə, AI)
                    istifadə edərək futbol oyunları üçün ən uyğun ehtimalları hesablayır.
                </p>

                <hr />

                <div class="row text-center">

                    <div class="col-md-4">
                        <div class="border rounded p-3">
                            <h5>📅 Bugünkü Oyunlar</h5>
                            <p class="text-muted mb-0">
                                Bu gün keçiriləcək oyunların siyahısı
                            </p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="border rounded p-3">
                            <h5>🔴 Canlı Oyunlar</h5>
                            <p class="text-muted mb-0">
                                Hal-hazırda davam edən matçlar
                            </p>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="border rounded p-3">
                            <h5>🤖 AI Proqnoz</h5>
                            <p class="text-muted mb-0">
                                Statistik və AI əsaslı analizlər
                            </p>
                        </div>
                    </div>

                </div>

                <hr />

                <div class="mt-3">
                    <a asp-controller="Football"
                       asp-action="Index"
                       class="btn btn-primary me-2">
                        Bugünkü Oyunlara Bax
                    </a>

                    <a asp-controller="Football"
                       asp-action="Live"
                       class="btn btn-outline-danger">
                        Canlı Oyunlar
                    </a>
                </div>

            </div>
        </div>

    </div>
</div>
